<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/bg_view_DDE2EA"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ly_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="0.1"
            android:orientation="vertical"
            android:minHeight="45dp"
            >
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    >

                    <!-- wallet 1. -->
                    <LinearLayout
                        android:background="@drawable/btn_round_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"

                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"

                            android:gravity="center"
                            android:letterSpacing="0.1"
                            android:text="@string/bswitch_promotion"
                            android:textColor="@color/black_100"
                            android:textSize="23dp"
                            android:textStyle="normal" />
                        <TextView
                            android:id="@+id/tv_promotion_wallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:layout_weight="1"

                            android:gravity="center"
                            android:letterSpacing="0.1"
                            android:text="0"
                            android:textColor="@color/black_100"
                            android:textSize="15dp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <!-- wallet 2. -->
                    <LinearLayout
                        android:background="@drawable/btn_round_ff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"

                        android:layout_weight="1"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"


                            android:gravity="center"
                            android:letterSpacing="0.1"
                            android:text="@string/bswitch_basic"
                            android:textColor="@color/black_100"
                            android:textSize="23dp"
                            android:textStyle="normal" />
                        <TextView
                            android:id="@+id/tv_base_wallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:layout_weight="1"


                            android:gravity="center"
                            android:letterSpacing="0.1"
                            android:text="0"
                            android:textColor="@color/black_100"
                            android:textSize="15dp"
                            android:textStyle="normal" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_max_reinvest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="17dp"

                    android:gravity="left"
                    android:text="@string/app_loading"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    />

                <EditText
                    android:id="@+id/tv_reinvest_coin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_weight="1"

                    android:paddingLeft="10dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="7dp"

                    android:inputType="textPersonName"
                    android:hint="@string/bswitch_hint_get_coin"
                    android:singleLine="true"
                    android:textColor="@color/black_100"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_fee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginBottom="15dp"

                    android:gravity="left"
                    android:text="@string/app_loading"
                    android:textColor="@color/red_f44336"
                    android:textSize="17dp"
                    />
                <EditText
                    android:id="@+id/tv_reinvest_safepass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_weight="1"

                    android:paddingLeft="10dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="7dp"


                    android:inputType="textPassword"
                    android:hint="@string/bswitch_hint_safe_pass"
                    android:singleLine="true"
                    android:textColor="@color/black_100"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_reinvest_ok"
                    android:background="@drawable/btn_round_325551"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"

                    android:layout_weight="1"

                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"

                    android:text="@string/reinvest_btn_ok"
                    android:textColor="@color/white"
                    android:textSize="20dp" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>

