<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <ImageView
        android:id="@+id/img_wallet"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:src="@drawable/w1"
        app:srcCompat="@drawable/w1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"

        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <TextView
            android:id="@+id/tv_wallet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/app_loading"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layerType="software"
            android:background="@drawable/hr_dash"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_wallet_coin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/app_loading"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/teal_2d645a"
            />

        <TextView
            android:id="@+id/tv_wallet_coin_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/app_loading"
            android:textSize="17dp"
            android:textColor="@color/black"
            />

    </LinearLayout>
</LinearLayout>